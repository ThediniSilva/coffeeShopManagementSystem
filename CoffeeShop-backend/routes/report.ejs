<html>
    <head>
        <style>
            table{
                font-family: Arial,  sans-serif;
                border-collapse: collapse;
                width:100%;
            }
            td,th{
                border:1px solid #dddddd;
                text-align:left;
                padding: 8px;
            }
        </style>
    </head>
    <body>
        <h3 style="text-align: center;">
          Cafe Management System
        </h3>
        <table>
            <tr>
                <th>Name: <%=name%></th>
                <th>Email: <%=email%></th>
                <th>Contact Number: <%=contactNumber%></th>
                <th>Payment method: <%=paymentMethod%></th>
            </tr>
        </table>

        <h3>Product Details:</h3>
        <table>
        <tr>
            <th>Name</th>   
            <th>Category</th>
            <th>Quantity</th>   
            <th>Price</th>   
            <th>Sub Total</th>     
        </tr> 
        <% if(prductDetails.lenght > 0){%>
            <% if(prductDetails.forEach(product =>{%>
                <tr>
                    <td><% product.name%></td>
                    <td><% product.category%></td>
                    <td><% product.quantity%></td>
                    <td><% product.price%></td>
                    <td><% product.total%></td>
                </tr>
        </table>
    </body>
</html>